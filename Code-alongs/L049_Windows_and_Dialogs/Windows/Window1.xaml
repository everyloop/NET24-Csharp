<Window x:Class="L049_Windows_and_Dialogs.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L049_Windows_and_Dialogs.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="listBox">
            <ListBoxItem>Fredrik Johansson</ListBoxItem>
            <ListBoxItem>Gustav Svensson</ListBoxItem>
        </ListBox>

        <StackPanel Grid.Column="1">
            <Button Content="Add User"                    
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Click="Button_Click"/>

            <Button Content="Add User"
                    Margin="10"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Click="Button_Click_1"/>

            <TextBox x:Name="myTextBox"
                     HorizontalAlignment="Center"
                     Width="200"/>
        </StackPanel>
    </Grid>
</Window>
