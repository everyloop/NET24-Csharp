<Window x:Class="L049_Windows_and_Dialogs.Windows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L049_Windows_and_Dialogs.Windows"
        mc:Ignorable="d"
        Title="Add User" Height="180" Width="135" WindowStyle="ToolWindow"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label>FirstName:</Label>
            <TextBox x:Name="textboxFirstName" />
            
            <Label>LastName:</Label>
            <TextBox x:Name="textboxLastName" />
            
            <StackPanel Orientation="Horizontal">
                <Button x:Name="buttonCancel"
                        Content="Cancel" 
                        Margin="10"
                        Click="buttonCancel_Click"/>
                
                <Button x:Name="ButtonAdd" 
                        Content="Add" 
                        Margin="10"
                        Click="ButtonAdd_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
